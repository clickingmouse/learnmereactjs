// step 1  create the circle/ game piece to be used
function Circle(props) {
  //change color based on state
  var color="white"
  if(props.cell==1){
    color="black"
  } 
  else if (props.cell==2){
    color="red"
  }
  
  var style = {
    backgroundColor: color,
    border: "1px solid black",
    borderRadius: "100%",
    paddingTop: "98%"
  };
  return <div style={style} />;
}
/*
